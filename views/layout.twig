<!DOCTYPE html>
<html lang="pt-BR" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <title>Agente IA - Grupos WhatsApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      transition: background 0.3s ease, color 0.3s ease;
    }
    .theme-toggle {
      position: fixed;
      top: 1rem;
      right: 1rem;
      z-index: 999;
    }
    .card-hover:hover {
      box-shadow: 0 0.75rem 1rem rgba(0,0,0,0.25);
      transform: scale(1.01);
      transition: all 0.3s ease-in-out;
    }
    textarea.form-control {
      min-height: 180px !important;
      height: auto !important;
    }

    .form-control, .form-select, .btn {
      transition: all 0.3s ease;
      background-color: var(--bs-body-bg);
      color: var(--bs-body-color);
    }
    .btn-outline-info {
      border: 1px solid var(--bs-info);
      color: var(--bs-info);
    }
    .btn-outline-danger {
      border: 1px solid var(--bs-danger);
      color: var(--bs-danger);
    }
    .btn-outline-light {
      border: 1px solid #ced4da;
    }
    [data-bs-theme="light"] .section-title {
      background-color: #fff;
      color: #000;
      padding: 0.5rem 1rem;
      border-radius: 0.375rem;
      display: inline-block;
    }
    [data-bs-theme="light"] thead th {
      background-color: #000 !important;
      color: #fff !important;
    }
  </style>
</head>
<body>
<!-- Título centralizado -->
<div class="text-center mt-4">
  <h1 class="fw-bold">
    <i class="bi bi-robot me-2 text-primary"></i>
    Agente IA para Grupos WhatsApp
  </h1>
</div>

<!-- Botões Sair e Tema lado a lado no topo à direita -->
<div class="position-absolute top-0 end-0 mt-3 me-5 d-flex align-items-center">
  <a href="/logout" class="btn btn-sm btn-outline-danger me-2" title="Sair" style="margin-right: 16px !important;">
    <i class="bi bi-box-arrow-right"></i> Sair
  </a>
  <button class="btn btn-sm btn-outline-light theme-toggle" onclick="toggleTheme()" title="Alternar tema">
    <i class="bi bi-circle-half"></i>
  </button>
</div>

<!-- Conteúdo principal -->
<div class="container-fluid px-3 px-md-5 py-4">
  {% block content %}{% endblock %}
</div>



  <!-- Rodapé fixo -->
  <footer class="text-center fixed-bottom pb-2 bg-transparent">
            <p class="text-muted small mb-0">
  Feito com <span style="color:red">&hearts;</span> por 
  <a href="https://griteplay.eu.org/dev" target="_blank" style="text-decoration: none;">Driko's v8</a>
</p>
  </footer>

  <!-- Modal de confirmação -->
  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar exclusão</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          Tem certeza que deseja excluir este grupo?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Excluir</a>
        </div>
      </div>
    </div>
  </div>

<script>
function toggleTheme() {
  const html = document.documentElement;
  const current = html.getAttribute("data-bs-theme");
  const newTheme = current === "dark" ? "light" : "dark";
  html.setAttribute("data-bs-theme", newTheme);
  localStorage.setItem("theme", newTheme);
}
(function applySavedTheme() {
  const saved = localStorage.getItem("theme");
  if (saved) document.documentElement.setAttribute("data-bs-theme", saved);
})();

// Confirmação de exclusão
function confirmarExclusao(link) {
  const confirmBtn = document.getElementById('confirmDeleteBtn');
  confirmBtn.href = link;
  const modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
  modal.show();
}
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



